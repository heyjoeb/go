<div class="store-report-detail">
  <div class="container">
    <div class="row content">
      <div class="col-md-12">
      <%= link_to "volver", 'javascript:history.go(-1);', :class => 'btn btn-back'  %>
      </div>

        <div class="col-md-12 section-title">
          <h3 class="item-title">
            <%= 'Nombre: ' + @storeReport.store_name %>
          </h3>
          <time class="item-date">
            <%= 'Fecha de robo: ' + @storeReport.created_at.to_s %>
          </time>
        </div>
        <div class="col-md-12 item-info">
          <div class="col-md-4 item-details">
            <h4>Comentarios acerca del local</h4>
            <p>
              <%= @storeReport.store_details %>
            </p>
          </div>
          <div class="col-md-4 theft-location">
            <h4>Ubicación del local</h4>
            <p>
              <%= @storeReport.store_location %>
            </p>
          </div>
          <div class="col-md-4 theft-status">
            <h4>Estado del reporte</h4>
            <p>
              <%= @storeReport.status %>
            </p>
          </div>
        <ul class="col-md-12 report-actions">
          <h4>¿Cómo ayudar?</h4>
          <li><span>compartir:</span>
            <%= request.original_url %>
          </li>
        </ul>
    
      </div>
    </div>
    <!--/.content -->
  </div>
  <!--/.container -->
</div>
<!--/.bike-report-detail -->