        </span>
        <%= @bike.bike_name %> </h2>
      </div>

      <div class="col-md-8 col-md-offset-2 section-title">




      <%= form_for(@bike) do |f| %>
        

        <div class="form-group col-md-6">
          <label class="sr-only" for="bike_name">Nombre de la bici*</label>
          <%= f.text_field :bike_name, :class => 'form-control', :placeholder => 'nombre de la bici*'%>
        </div>


        <div class="form-group col-md-6">
          <label class="sr-only" for="bike_brand">marca*</label>
          <%= f.text_field :bike_brand, :class => 'form-control', :placeholder => 'marca*'%>
        </div>

        <div class="form-group col-md-6">
          <label class="sr-only" for="bike_model">modelo o referencia</label>
          <%= f.text_field :bike_model, :class => 'form-control', :placeholder => 'modelo o referencia'%>
        </div>

        <div class="form-group col-md-6">
          <label class="sr-only" for="bike_color">color principal*</label>
          <%= f.select(:bike_color, options_for_select([['color principal', nil],['amarillo'], ['azul'], ['blanco'], ['verde'], ['naranja'], ['rosado'], ['café'], ['gris'], ['negro'], ['plateado'], ['dorado'], ['fucsia'], ['morado']], disabled: "color principal", selected: "color principal"), {}, { :class => 'form-control' }) %>
        </div>

        <div class="form-group col-md-6">
          <label class="sr-only" for="bike_serial">serial*</label>
          <%= f.text_field :bike_serial, :class => 'form-control', :placeholder => 'serial*'%>
        </div>

        <div class="form-group col-md-12">
          <label class="sr-only" for="bike-serial">características*</label>
          <%= f.text_area :bike_details, :class => 'form-control', :placeholder => 'características (stickers, decoración, componentes...)'%>
        </div>


        <div class="form-group col-md-12 btn-container">
          <%= f.submit "actualizar bicicleta", :class => 'btn' %>
          <%= link_to 'cancelar', user_bikes_path, :class => 'btn btn-secondary' %>
        </div>

      <% end %>

      </div>
    </div>
    <!--/.content -->
  </div>
  <!--/.container -->
</div>
<!--/.user-registry -->